{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "${description}",
  "contact": {
    "issues": "${source}/issues",
    "sources": "${source}"
  },
  "authors": ["${author}"],
  "license": "${license}",
  "icon": "assets/${id}/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "${group}.minecraft.mod.fabric.${id}.${name}"
      }
    ]
  },

  "depends": {
    "java": ">=${java}",
    "minecraft": "${minecraft}",
    "fabric": ">=${fabric}",
    "fabricloader": ">=${fabric_loader}",
    "fabric-language-kotlin": ">=${fabric_kotlin}"
  }
}
